{
    "name": "@donmahallem/gist-deploy",
    "version": "0.0.0",
    "description": "Gist deploy action",
    "main": "dist/index.js",
    "private": true,
    "keywords": [],
    "scripts": {
        "build": "npm run build:lib && npm run build:action",
        "build:lib": "tsc --project ./tsconfig.lib.json --outDir ./dist/lib",
        "build:action": "ncc build ./src/action.ts -o ./dist/action",
        "build:readme": "npx @appnest/readme generate --input ../package_readme_blueprint.md --config readme_config.json",
        "test": "mocha --config ./.mocharc.yml",
        "test:coverage": "nyc --nycrc-path ./.nycrc.json npm run test",
        "lint": "tslint -c tslint.json -p tsconfig.json src/**/*.ts",
        "lint:fix": "tslint --fix -c tslint.json -p tsconfig.json src/**/*.ts",
        "docs": "typedoc --options ./typedoc.json"
    },
    "homepage": "https://donmahallem.github.io/gist-deploy/",
    "author": {
        "name": "donmahallem",
        "email": "donmahallem@users.noreply.github.com",
        "url": "https://github.com/donmahallem"
    },
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/donmahallem/gist-deploy/issues"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/donmahallem/gist-deploy.git"
    },
    "engines": {
        "node": ">=10.0.0"
    },
    "files": [
        "dist/*",
        "src/*",
        "!src/**/*.spec.ts"
    ],
    "publishConfig": {
        "access": "restricted"
    },
    "dependencies": {
        "@actions/core": "~1.10.0",
        "@actions/github": "~5.0.0",
        "@donmahallem/sync-gist": "~0.4.2",
        "ajv": "~8.12.0"
    },
    "devDependencies": {
        "@octokit/types": "6.29.0",
        "@types/chai": "4.3.5",
        "@types/mocha": "9.1.1",
        "@types/node": "18.16.3",
        "@types/sinon": "10.0.14",
        "@vercel/ncc": "0.36.1",
        "chai": "4.3.7",
        "commitizen": "4.3.0",
        "mocha": "9.2.2",
        "nyc": "15.1.0",
        "sinon": "15.0.4",
        "ts-node": "10.9.1",
        "tslint": "6.1.3",
        "typedoc": "0.22.18",
        "typescript": "4.7.4"
    }
}
